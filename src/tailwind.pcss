@tailwind base;

.max-line-2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.max-line-1 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.product-img {
    flex-basis: 55%;
}

.listing {
    justify-items: center;
}

.mapboxgl-canvas:focus {
    outline: none;
}

@tailwind components;
@tailwind utilities;